<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f2f5">

    <!-- 顶部标题栏 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="我的课程表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- 冲突提示区域 -->
    <LinearLayout
        android:id="@+id/conflict_warning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF3E0"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"
            android:layout_gravity="center_vertical"
            app:tint="#FF9800" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检测到课程时间冲突，请注意查看详细信息"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- 星期标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周一"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周二"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周三"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周四"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周五"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 课程表主体 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一大节 (1-2节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="1-2节\n8:00\n~\n9:35"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/monday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第二大节 (3-4节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="3-4节\n9:50\n~\n11:25"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/monday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第三大节 (5-6节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="5-6节\n13:45\n~\n15:20"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/monday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第四大节 (7-8节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="7-8节\n15:35\n~\n17:10"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/monday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <!-- 首页按钮 -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 管理按钮 -->
        <LinearLayout
            android:id="@+id/nav_manage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_manage_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="管理"
                android:textColor="#1296db"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 我的按钮 -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
