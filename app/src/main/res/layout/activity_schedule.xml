<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f2f5">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="我的课程表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- 星期标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周一"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周二"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周三"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周四"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周五"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 课程表主体 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一大节 (1-2节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="1-2节"
                    android:gravity="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/monday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第二大节 (3-4节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="3-4节"
                    android:gravity="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/monday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第三大节 (5-6节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="5-6节"
                    android:gravity="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/monday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_5_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- 第四大节 (7-8节) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="7-8节"
                    android:gravity="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/monday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/tuesday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/wednesday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/thursday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />

                <LinearLayout
                    android:id="@+id/friday_7_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/schedule_cell_background"
                    android:orientation="vertical"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
