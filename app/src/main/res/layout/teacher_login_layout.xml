<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.studentmanager_system.Tools.RoundImageView
        android:id="@+id/teacher_layout_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/teacher_photo"/>

    <EditText
        android:id="@+id/teacher_login_id_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/teacher_layout_pic"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_box"
        android:hint="请输入教师ID"
        android:inputType="text"
        android:gravity="center"/>

    <EditText
        android:id="@+id/teacher_login_password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/teacher_login_id_input"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_box"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:gravity="center"/>

    <Button
        android:id="@+id/teacher_login_button"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/teacher_login_password_input"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="登录"/>
</RelativeLayout>