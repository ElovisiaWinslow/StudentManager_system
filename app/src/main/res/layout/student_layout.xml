<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!-- 原有控件：tv1、tv2、pic、查询个人信息按钮、选课按钮、修改密码按钮 不变 -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="欢迎使用NJUPT"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="管理系统"
        android:textSize="20sp" />

    <com.example.studentmanager_system.Tools.RoundImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/tv1"
        android:src="@drawable/student_photo" />

    <Button
        android:id="@+id/student_activity_selectInfo"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:text="查询个人信息" />

    <Button
        android:id="@+id/student_activity_select_course"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_activity_selectInfo"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="选课" />

    <Button
        android:id="@+id/student_activity_changePassword"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_activity_select_course"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="修改密码" />

    <!-- 新增：已选课程按钮（添加在修改密码按钮下方，间距与其他按钮一致） -->
    <Button
        android:id="@+id/student_activity_selected_courses"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_activity_changePassword"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="已选课程" />

</RelativeLayout>